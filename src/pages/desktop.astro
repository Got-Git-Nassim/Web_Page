---
import Layout from '../layouts/Layout.astro';
import Card from '../components/pic.astro';
import ele from "../components/1.png";
import Z from '../components/Z.astro';
import hide from "../components/5.png";
---

<Layout title="My Desktop Apps">
	<main>
		<h1 class="welcome">Check Out <span class="text-gradient">My Desktop Apps</span></h1>
		<p class="instructions"><strong>Explore</strong> and download my desktop applications</p>
		<ul role="list" class="link-card-grid">
			<Card
				href="/path-to-your-app-1-download-link.exe"
				title="App 1"
				body="Description of App 1"
				src={ele}
			/>
			<Card
				href="/path-to-your-app-2-download-link.exe"
				title="App 2"
				body="Description of App 2"
				src={hide}
			/>
		</ul>
        <ul><Z
            href="/"
            title="Home"
            body="Go back to the home page"
              /></ul>
         
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1.5rem;
		max-width: 60ch;
	}
	h1 {
		font-size: 3rem;
		font-weight: 800;
		margin: 0;
	}
	.welcome {
		text-align: center;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.instructions {
  max-width: 50ch; /* Adjust the max-width as needed */
  line-height: 1.6;
  margin: 2rem auto;
  border: 1px solid rgba(var(--accent), 25%);
  background-color: white;
  padding: 1rem;
  border-radius: 0.4rem;
  text-align: center;
}
	.instructions code {
		font-size: 0.875em;
		font-weight: bold;
		background: rgba(var(--accent), 12%);
		color: rgb(var(--accent));
		border-radius: 4px;
		padding: 0.3em 0.45em;
	}
	.instructions strong {
		color: rgb(var(--accent));
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 1.5rem;
		padding: 0;
		margin: 0 auto;
		margin-top: 10%;
	}

	@media (max-width: 768px) {
		.welcome {
			font-size: 2rem;
			margin-left: 0;
		}
		.instructions {
			max-width: 100%;
		}
	}
</style>
