---
export interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---


<astro-fragment>
  <li class="link-card">
    <a href={href}>
      <div class="card-content">
        <h2>{title}</h2>
        <p>{body}</p>
      </div>
    </a>
  </li>

  <style>
    .link-card {
      list-style: none;
      padding: 1.5rem;
      border-radius: 0.75rem;
      transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      overflow: hidden;
      position: relative;
      background-color: #f8f8f8;
    }

    .link-card > a {
      text-decoration: none;
      color: #333;
      display: flex;
    }

    .card-content {
      text-align: left;
    }

    h2 {
      margin: 0;
      font-size: 1.5rem;
      color: #222;
      margin-bottom: 0.5rem;
    }

    p {
      margin: 0;
      color: #555;
    }

    .link-card:hover {
      transform: translateY(-3px);
      box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
    }

    .link-card:before {
      content: '';
      position: absolute;
      top: -10px;
      left: -10px;
      width: calc(100% + 20px);
      height: calc(100% + 20px);
      background: linear-gradient(135deg, #ccc 0%, #f8f8f8 100%);
      opacity: 0;
      transition: opacity 0.3s ease-in-out;
      z-index: -1;
    }

    .link-card:hover:before {
      opacity: 1;
    }
  </style>
</astro-fragment>
